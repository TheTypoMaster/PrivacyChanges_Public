        <script>
            window.onload = function () {
                resizeDiv();
            };
            $(".header-drill-down").mouseenter(function () {
                $(this).siblings(".header-drill-down-bg").css("opacity", "0.2");
            });
            $(".header-drill-down").mouseout(function () {
                $(this).siblings(".header-drill-down-bg").css("opacity", "0");
            });
            window.onresize = function (event) {
                resizeDiv();
            };
            function resizeDiv() {
                vph = $(window).height();
                if (vph < 768) {
                    $('.container header .header-txt').css({'width': '90%'});
                    $('header').css({'height': 'auto !important'});
                    $('header').css({'height': $('.row.header-txt img').height() + 100 + 'px'});
                }
                else {
                    $('header').css({'height': vph - 200 + 'px'});
                }
            }
            $(".header-drill-down").click(function () {
                $('html, body').animate({
                    scrollTop: $(".main-content").offset().top - 100
                }, 1500);
            });
            window.onscroll = function () {
                var nav = $(".nav-bar");
                var offsetTop = $(window).scrollTop();
                if (offsetTop > 10) {
                    nav.addClass("sticky");
                } else {
                    nav.removeClass("sticky");
                }
            };
            $(".read_more").click(function () {
                $(this).hide();
                $(".read_more_txt").show();
            });
        </script>

