<script src="//wwwstatic.spiceworks.com/js/underscore.min.js"></script>

<script type="text/javascript">

  var getDownloadTrackingData = function(){
    var tracking = {'download_tracking': {"landing_category":"","landing_page":""}};
    if (typeof tracking.download_tracking.landing_page != "undefined") // need to encode urls like landing_page (fixes referrer)
      tracking.download_tracking.landing_page = encodeURI(tracking.download_tracking.landing_page);
    tracking.download_tracking.download_page = encodeURI("\/privacy\/");
    return tracking;
  };

  $(function(){
    var i,
    policy = 'www',
    success = '//www.spiceworks.com/social-success',
    socialContainer = $('.social_links');

    $.ajax({
      url: 'http://accounts.spiceworks.com/auth/spiceworks/providers.js',
        dataType: 'jsonp',
        data: { 'client_version': 'www' }
    })
    .success(function(links){
		var i, link, successLink, numProviders = 0;
		for (provider in links){
			link = links[provider];
	        (function(provider){
	        	var properName;
	        	if (provider == 'facebook') properName = 'Facebook';
	        	if (provider == 'linkedin') properName = 'LinkedIn';
	        	numProviders++;
	          $('<a href="#" style="margin:0 8px;" onclick="_gaq.push([\'_trackEvent\', \'Buttons\', \'Clicked\', \'Join with ' + properName + ' - Download\']);" data-social-join="'+provider+'">'+'<img alt="'+link.img_alt+'" src="'+link.img_src+'"></a>')
	            .appendTo(socialContainer)
	            .on("click", function(e) {
	              var params = jQuery.param(getDownloadTrackingData()),
	                  where = document.location,
	                  social_network = $(this).attr('data-social-join'),
	                  window_opts = "width="+link.width+",height="+link.height,
	                  newUser = $(this).parents(".social_links").next("#join_download_form").length > 0;

	              successLink = success + "?provider=" + provider + "&newuser=" + "false"
	              _gaq.push(['_trackEvent', 'Buttons', 'Using '+ provider +' to Download', 'Clicked for ' + (newUser ? 'new user' : 'existing_user')]);

	              Cookie.set('social_auth_referer_url', where, {path: '/'});
	              query = "?policy=" + policy + "&success=" + success + "&" + params;
	              window.open("http://accounts.spiceworks.com/auth/" + provider + "/start" + query, "sw_social_join", window_opts);
	              e.preventDefault();
	            });
	        })(provider);
	    }
      if (!numProviders) {
      	$('#join-login .social-register, #join-login .or-divider').hide();
      }
    });
  });


$(document).on('click.modal.data-api', '[data-tab]', function (tab) {
	tab = $(this).data('tab');
	$(".tab-pane").removeClass("active");
	$("#" + tab).addClass("active in");
});

$('#join-login').on('hidden', function () {
	if ( $('#join_download').hasClass('active') ) {
		_gaq.push(['_trackEvent', 'Form', 'Register to Download', 'Closed']);
		if (typeof email !== "undefined") {
			SWUFR.cmd.push(function() { SWUFR.ufr.modalClose(email); });
		}
	} else if ( $('#login_download').hasClass('active') ) {
		_gaq.push(['_trackEvent', 'Form', 'Login to Download', 'Closed']);
	} else if ( $('#join').hasClass('active') ) {
		_gaq.push(['_trackEvent', 'Form', 'Join Spiceworks', 'Closed']);
	} else if ( $('#login').hasClass('active') ) {
		_gaq.push(['_trackEvent', 'Form', 'Login to Spiceworks', 'Closed']);
	}
});

//$('.password-reset-link').bind("click",function() {
    //$('a[href="#password-reset"]').tab('show');
//});

$('#join-login').on('shown', function () {
	var $join_download = $('#join_download');
	if ($join_download.hasClass('active')) {

		var openedMessage = 'Opened';
		_gaq.push(['_trackEvent', 'Form', 'Register to Download', openedMessage]);
		window.optimizely.push(["trackEvent", "Register to Download - Opened"]);
		SWUFR.cmd.push(function() {
			SWUFR.ufr.modalOpen();
		});
		$join_download.find('#registration_email').focus();
	}
});

(function() {
    $('#join_download_form input').bind("change keyup",function() {
        var form_empty = false;
        $('#join_download_form input').each(function() {
            if ( $(this).val() == '' ) {
                form_empty = true;
            }
        });

        if (form_empty == false) {
            $('#join_download_form .btn-form').removeAttr('disabled');
            $('#join_download_form .btn-form').removeClass('disabled');
        } else {
            $('#join_download_form .btn-form').attr('disabled');
            $('#join_download_form .btn-form').addClass('disabled');
        }
    });

    $('input#registration_password').bind("focus",function() {
    	$('#registration_password_help').show();
    });

    function validateEmail(email){
      var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      if(re.test(email)){
        return true;
      }else{
        return false;
      }
    };

    function validatePassword(password){
      var re = /^(?=.*[A-Z])[A-Za-z\d$@$!%*#?&^()-_+=`~|]{8,}$/;
      if(re.test(password)){
        return true;
      }else{
        return false;
      }
    };

    $('input#registration_email').bind("change",function() {
	    if ( validateEmail($(this).val()) ) {
        	$(this).removeClass('error');
        	$('#registration_email_success').show();
        	$('#registration_email_error').hide();
        	$('#registration_email_help').slideUp(500);
    		email = $(this).val();
	    } else {
        	$(this).addClass('error');
        	$('#registration_email_success').hide();
        	$('#registration_email_error').show();
        	$('#registration_email_help').slideDown(500);
	    }
    });

    $('input#registration_password').bind("change",function() {
	    if ( validatePassword($(this).val()) ) {
        	$(this).removeClass('error');
        	$('#registration_password_success').show();
        	$('#registration_password_error').hide();
        	$('#registration_password_help').slideUp(500);
	    } else {
        	$(this).addClass('error');
        	$('#registration_password_success').hide();
        	$('#registration_password_error').show();
	    }
    });
})();

(function() {
    $('#login_download_form input').bind("change keyup",function() {
        var form_empty = false;
        $('#login_download_form input').each(function() {
            if ( $(this).val() == '' ) {
                form_empty = true;
            }
        });

        if (form_empty == false) {
            $('#login_download_form .btn-form').removeAttr('disabled');
            $('#login_download_form .btn-form').removeClass('disabled');
        } else {
            $('#login_download_form .btn-form').attr('disabled');
            $('#login_download_form .btn-form').addClass('disabled');
        }
    });
})();

(function(){

  var joinDownloadCloseModal = false;

  var getDownloadTrackingData = function() {
    var tracking = {'download_tracking': {"landing_category":"","landing_page":""}};
    tracking.download_tracking.download_page = "\/privacy\/";
    return tracking;
  };

  var parseErrorResponse = function(responseText) {
    try { return jQuery.parseJSON(responseText); } catch(err) { return {errors: {}}; }
  };

  var formatErrorMessage = function(key, error) {
    var fragment = key + ' ' + error;
    return fragment.charAt(0).toUpperCase() + fragment.slice(1);
  };

  var handleErrors = function(form, jqxhr) {
    var errorMessages = [];
    var response = parseErrorResponse(jqxhr.responseText);
    if (response.errors) {
      _.each(response.errors, function(errors, key) {
        if (key == 'base') {
          errorMessages = errorMessages.concat(errors);
        }
        else {
          errors.forEach(function(error){ errorMessages.push(formatErrorMessage(key, error));});
          var inputSelector = 'input[name*="[' + key + ']"]';
          form.find(inputSelector).parents('.control-group').addClass('error');
          $('#registration_email_error').hide();
          $('#registration_password_error').hide();
        }
      });
    }
    if (errorMessages.length == 0) {
      errorMessages.push("Yikes, that didn't work. Please try again or <a href=\"mailto:support@spiceworks.com\" onClick=\"_gaq.push([\'_trackEvent\', \'Form\', \'Links\', \'Contact Support\']);\">contact support</a>.");
      $('#registration_email_error').hide();
      $('#registration_email_success').hide();
      $('#registration_password_error').hide();
      $('#registration_password_success').hide();
    }
    form.find('.generic-error').html(errorMessages.join("<br />")).slideDown(250);
  };

  var hideErrors = function(form) {
    form.find('.control-group').removeClass('error');
    form.find('.generic-error').slideUp(250);
  };

  $('#join_download_form').submit(function(evt) {
    evt.preventDefault();
    var self = $(this);

    // Success tracking message
    var successMessage = 'Successful Download';
    if (joinDownloadCloseModal) {
      successMessage += ' - Direct';
    }
    
    hideErrors(self);
    self.find('button').prop('disabled','disabled');
    var formDataString = self.serialize();
    formDataString += '&' + $.param({'registration': getDownloadTrackingData()});
    $.post('/community/join/register_for_download', formDataString,
      function(data){
        if (data.login) {
          _gaq.push(['_trackEvent', 'Form', 'Login to Download', successMessage]);
		  window.optimizely.push(["trackEvent", "Login to Download - Successful Download"]);
    	  if (joinDownloadCloseModal) {
  	   	    $('#join-login').modal('hide');
  	      } else {
  	   	    setTimeout(function(){window.location.href = downloadDestination + 'app/'}, 150);
  	      }
        } else {
      	  _gaq.push(['_trackEvent', 'Form', 'Register to Download', successMessage]);
		  window.optimizely.push(["trackEvent", "Register to Download - Successful Download"]);
  		    SWUFR.cmd.push(function() {
  		      SWUFR.ufr.download(function(){
  		      	if (joinDownloadCloseModal) {
  		      	  $('#join-login').modal('hide');
  		      	} else {
  		      	  window.location.href = downloadDestination;
  		      	}
  		      });
  		    });
  	   }
  	   if (joinDownloadCloseModal) {
  	   	 $('#join-login').modal('hide');
  	   } else {
  	     setTimeout(function(){window.location.href = downloadDestination}, 150);
  	   }
      }, 'json'
    )
      .fail(function(jqxhr){
      	if (jqxhr.status == 401) {
        	_gaq.push(['_trackEvent', 'Form', 'Register to Download', 'Email In Use']);
          	$('.email-use-error').slideDown(250);
      	} else {
	        _gaq.push(['_trackEvent', 'Form', 'Register to Download', 'Error']);
	        handleErrors(self, jqxhr);
      	}
      })
      .always(function(){
        self.find('button').prop('disabled',false);
      });
  });

  $('#login_download_form').submit(function(evt) {
    evt.preventDefault();
    var self = $(this);

    // Success tracking message
    var successMessage = 'Successful Download';
    if (joinDownloadCloseModal) {
      successMessage += ' - Direct';
    }
    
    hideErrors(self);
    self.find('button').prop('disabled','disabled');
    var formDataString = self.serialize();
    formDataString += '&' + $.param({'login': getDownloadTrackingData()});
    $.post('/community/login/login_for_download', formDataString, function(){
    	_gaq.push(['_trackEvent', 'Form', 'Login to Download', successMessage]);
		window.optimizely.push(["trackEvent", "Login to Download - Successful Download"]);
		if (joinDownloadCloseModal) {
  	   	  $('#join-login').modal('hide');
  	    } else {
          setTimeout(function(){window.location.href = downloadDestination + 'app/'}, 150);
        }
      }, 'json')
      .fail(function(jqxhr){
        _gaq.push(['_trackEvent', 'Form', 'Login to Download', 'Error']);
        handleErrors(self, jqxhr);
      })
      .always(function(){
        self.find('button').prop('disabled',false);
      });
  });

  $('.btn-forgot-password').click(function(e) {
    var href = '#join';
    if ($(this).hasClass('from-log-in-download')) {
      href += '_download';
    }
    $('#joinFromReset').attr('href', href);
  });

  $('#password-reset-form').submit(function(evt) {
    evt.preventDefault();
    var self = $(this),
    	endpoint = window.location.protocol + '//' + window.location.host + '/library/includes/identity/reset_password/',
    	email = $('#reset-form_email').val(),
    	callbackURL = window.location.toString();
    hideErrors(self);
    self.find('.generic-error').hide();
    self.find('.generic-success').hide();
    self.find('button').prop('disabled','disabled');
    $.post(endpoint, {'email': email, 'url': callbackURL}, function(data) {
    	if (data && data.status == 'success') {
    		_gaq.push(['_trackEvent', 'Form', 'Reset Password', 'Email Sent']);
    		self.find('.generic-success').slideDown(250);
    	} else if (data && data.status == 'error' && data.message) {
        	_gaq.push(['_trackEvent', 'Form', 'Reset Password', 'Error']);
    		self.find('.generic-error').text(data.message).slideDown(250);
    	} else {
        	_gaq.push(['_trackEvent', 'Form', 'Reset Password', 'Error']);
    		self.find('.generic-error').text('Something went wrong. Please check your email and try again.').slideDown(250);
    	}
      }, 'json')
      .fail(function(jqxhr){
        _gaq.push(['_trackEvent', 'Form', 'Reset Password', 'Error']);
        self.find('.generic-error').text('Something went wrong. Please check your email and try again.').slideDown(250);
      })
      .always(function(){
        self.find('button').prop('disabled',false);
      });
  });

})();

</script>


<script type="text/javascript">
  $(function() {

  	var $specialDest = $('meta[name=specialdownloaddest]');
  	var specialDest = false;
  	if ($specialDest.length) {
  		specialDest = $specialDest.attr('content');
  	}
    var monitorRE = /monitor/;
    if ($("#join-login.modal #join_download").length) {
      $(document).on('click', 'a[href^="/download/"]', function(evt) {
      	if ($(this).hasClass('skip-modal')) {
      		window.location = this.href;
      		return;
      	}
      	evt.preventDefault();
        $('.video-modal').modal('hide');
		    downloadDestination = this.href;
		    if (specialDest) {
		    	downloadDestination = specialDest;
		    }

        if (monitorRE.test(downloadDestination)) //network monitoring does not support social signup
          $("#join_download .social-register").hide();

        $('#join-login.modal').modal('show');
        $('#join-login.modal .tab-pane').removeClass("active");
        $('#join-login.modal #join_download').addClass("active in");
        return false;
      });

      // Add temp support for GNS3
      $(document).on('click', 'a[href^="/gns3/download/"]', function(evt) {
      	if ($(this).hasClass('skip-modal')) {
      		window.location = this.href;
      		return;
      	}
      	evt.preventDefault();
        $('.video-modal').modal('hide');
		    downloadDestination = this.href;
		    if (specialDest) {
		    	downloadDestination = specialDest;
		    }

        if (monitorRE.test(downloadDestination)) //network monitoring does not support social signup
          $("#join_download .social-register").hide();

        $('#join-login.modal').modal('show');
        $('#join-login.modal .tab-pane').removeClass("active");
        $('#join-login.modal #join_download').addClass("active in");
        return false;
      });

      // Add support for data-attr.
      $(document).on('click', 'a[data-href^="/download/"]', function(evt) {
      	evt.preventDefault();
        $('.video-modal').modal('hide');
		    downloadDestination = $(this).attr('data-href');
		    if (specialDest) {
		    	downloadDestination = specialDest;
		    }

        if (monitorRE.test(downloadDestination)) //network monitoring does not support social signup
          $("#join_download .social-register").hide();

        $('#join-login.modal').modal('show');
        $('#join-login.modal .tab-pane').removeClass("active");
        $('#join-login.modal #join_download').addClass("active in");
        return false;
      });
    }
    window.SW_DOWNLOAD_WAIT = false;
  });
</script>


