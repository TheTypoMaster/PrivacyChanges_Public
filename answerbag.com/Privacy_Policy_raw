			jQuery.noConflict()(function($) {
				// can run document.ready jquery here using $
				//$('.bg').css('height','26px');
				$('.fbWrapper').css('display','none');
				$('.fbWrapper').delay(1500).fadeIn('slow');
				// bind to login dialog to login link
				$('.login-dialog').click(function() {
					AB.dialog('login');
				});

				$('.logout-now').click(function() {
					$.getJSON('/ajax/logout', null, function(json) {
						if (json) {
							AB.dialog('logout');
						} else {
							AB.dialog('error?error='+escape('logout failed'));
						}
					});
				});

				window.fb_login_now = function(show_confirmation) {
					FB.login(function(response) {
						if (response.authResponse) {
                            $.ajax({
                                url: '/ajax/facebook_auth',
                                type: 'POST',
                                dataType: 'json',
                                data: { perms: 'email' },
                                success: function(json) {
                                    if (typeof json == 'string') { // error string
                                        AB.dialog('error?error='+escape(json));
                                        return;
                                    }

                                    AB.user_id = json.user_id;

                                    if (json.new_account) {
                                        AB.dialog('login/registered/facebook');
                                    } else if (show_confirmation) {
                                        AB.dialog('login/logged-in');
                                    } else {
                                        AB.onLogin();
                                    }
                                }
                            });
						} else if(show_confirmation) {
							AB.dialog('login?error='+escape('You must authorize Answerbag to login with Facebook.'));
						}
					}, { scope:'email' });
					return false;
				};

				$('.fb-login-now').click( function() { window.fb_login_now(false); });
		
			
			
			
			});
			AB.user_id = null;
		</script>
        
    
