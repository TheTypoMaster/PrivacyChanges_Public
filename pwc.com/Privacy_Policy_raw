var sharetitle = "PwC's privacy commitment";

function emailpage(){
var urlToOpen = "/en_GX/webadmin/forms/email_a_colleague.jhtml?localeOverride=en_GX&color_stylesheet=tangerine&urlref=imG23+pEvJS4MDpNpUkfc0Bl4suk2HBD+wAyJBE7j8pWCzAUpzmo9y4T50TogBcxdx8y6pPDixo=";
