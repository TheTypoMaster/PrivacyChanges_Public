<script type="text/javascript" src="http://s1.daumcdn.net/svc/original/U03/cssjs/jquery/jquery-1.9.0.min.js"></script>
<script type="text/javascript">
document.domain = "daum.net";
jQuery.noConflict();
jQuery(document).ready(function($) {
var ua = navigator.userAgent.toLowerCase(),
hideBg = (ua.indexOf('iphone') !== -1 || ua.indexOf('ipad') !== -1 || ua.indexOf('ipod') !== -1 || ua.indexOf('android') !== -1 || ua.indexOf('polaris') !== -1) ? true : false,
toggleBlackBg = function() {
$('#blackBg').height($(document).height())
.width($(document).width())
.toggleClass('hide');
},
openPopup = function(id) {
$('#' + id.replace('btn', 'layer')).toggleClass('hide').css({'top' : 100 + $(document).scrollTop() + 'px'});
toggleBlackBg();
};
if(hideBg) {
$('#daumWrap').addClass('iphone');
}
$('.btn_privacy.btn_more.btn_outerpage').bind('click', function(e) {
openPopup(e.currentTarget.id);
});
$('.btn_privacy.btn_close.btn_outerpage').bind('click', function(e) {
$(e.target).parents('.privacy_layer').toggleClass('hide');
toggleBlackBg();
});
$('.btn_privacy.btn_more.btn_innerpage').bind('click', function(e) {
$(e.currentTarget).siblings('.box_more').toggleClass('hide');
});
$('.btn_privacy.btn_close.btn_innerpage').bind('click', function(e) {
$(e.target).parents('.box_more').toggleClass('hide');
});
$('.ico_privacy.link_more').bind('click', function(e) {
$(e.target).parents('.list_info').toggleClass('list_on');
});

var previousVersionUrls = {
'tistory':'info_protection_v65.html?service=tistory',
'myone':'info_protection_v65.html?service=myone',
'sol':'info_protection_v65.html?service=sol',
'mypeoplewith':'info_protection_v65.html?service=mypeoplewith'
}

var service = getParams('service');
var previousVersionUrl = previousVersionUrls[service];
if (typeof previousVersionUrl != 'undefined') {
jQuery("#daumHead").remove();
jQuery("#sectionEtc .cont_privacy5 a.btn_prev").attr("href", previousVersionUrl);
// jQuery("#sectionEtc .cont_privacy5 a.btn_prev").attr("target", "_blank");
}
});
</script>
</body>
</html>