<script type="text/javascript">
var minidaum_options = {
bgType: "white",

enableLogoutRetun: false,
returnUrl: '',

disableHotissue: false,

disableLogo: false,

disableTracker: false,

enableShield: false
}

function getParams(name){
var query = window.location.search.substring(1);
var vars = query.split("&");
for (var i = 0; i < vars.length; i++) {
var pair = vars[i].split("=");
if(pair[0] == name){
return pair[1];
}
}
return null;
}

function popup(type) {
var service = getParams('service');
var urls = {
collect : {url : 'popup/info_collect.html', height : 600},
offer : {url : 'popup/info_offer.html', height : 600},
provide : {url : 'popup/info_provide.html', height : 130},
power : {url : 'popup/info_power.html', height : 180}
}

var url = service == null ? urls[type].url : urls[type].url + "?service=" + service;
var width = 715;

window.open(url, 'evtPop','width=' + width + ',height=' + urls[type].height + ',menubar=0,toolbar=0,location=0,scrollbars=1,status=0,resizable=0');
return false;
}

</script>
